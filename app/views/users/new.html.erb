<% if session[:currentUserID] == nil %>
<% if @newUser.errors.any? %>
      <ul>
        <% @newUser.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
  <% end %>
<%= form_tag("/users", method: "post") do %>
	<center>
	<table>
		<tr>
			<td><%= label_tag("First Name:") %></td>
			<td><font color="black"><%= text_field_tag(:firstName) %></font></td>
		</tr>
		<tr>
			<td><%= label_tag("Last Name:") %></td>
			<td><font color="black"><%= text_field_tag(:lastName) %></font></td>
		</tr>
		<tr>
			<td><%= label_tag("Username:") %></td>
			<td><font color="black"><%= text_field_tag(:login) %></font></td>
		</tr>
		<tr>
			<td><%= label_tag("WCA ID (optional):") %></td>
			<td><font color="black"><%= text_field_tag(:wca_id) %></font></td>
		</tr>
		<tr>
			<td><%= label_tag("Email:") %></td>
			<td><font color="black"><%= text_field_tag(:email) %></font></td>
		</tr>
		<tr>
			<td><%= label_tag("Password:") %></td>
			<td><font color="black"><%= password_field(:passwordBox1, :password1) %></font></td>
		</tr>
		<tr>
			<td><%= label_tag("Confirm Password:") %></td>
			<td><font color="black"><%= password_field(:passwordBox2, :password2) %></font></td>
		</tr>
		<tr>
			<td>
				<%= submit_tag("Register") %>
			</td>
		</tr>
	</table>	
</center>
<% end %>
<% else %>
You are already logged in.
<% end %>

