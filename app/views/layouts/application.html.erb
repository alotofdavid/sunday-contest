          <% if session[:currentUserID] != nil then %>
            <%  currentUser = User.find_by_id(session[:currentUserID]) %>
      
            <li><%= link_to "#{currentUser.first_name}", "/users/#{currentUser.id}" %></li>
             <li><a href="/">Account <i class="fa fa-cog"></i></a></li>
